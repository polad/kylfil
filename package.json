{
  "name": "kylfil",
  "version": "1.1.0",
  "description": "A tiny database-agnostic Event Store",
  "author": "Polad Mirzayev <polad@web3studio.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/polad/kylfil.git"
  },
  "type": "commonjs",
  "packageManager": "yarn@4.8.0",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
