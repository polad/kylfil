    "@eslint/js": "^9.38.0",
    "@semantic-release/git": "^10.0.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.2.4",
